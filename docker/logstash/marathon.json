{
  "id": "logstash",
  "instances": 1,
  "cpus": 1,
  "mem": 1024,
  "disk": 0,
  "requirePorts": false,
  "backoffSeconds": 1,
  "backoffFactor": 1.15,
  "maxLaunchDelaySeconds": 3600,
  "dependencies": [
    "/sys/elk/elasticsearch"
  ],
  "labels": {
    "owner": "sys"
  },
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "softonic/logstash",
      "network": "BRIDGE",
      "portMappings": [
        { "containerPort": 12201, "hostPort": 0, "protocol": "udp" }
      ],
      "forcePullImage": true
    }
  },
  "healthChecks": [
    {
      "protocol": "COMMAND",
      "command": { "value": "ps aux | grep logstash" },
      "gracePeriodSeconds": 300,
      "intervalSeconds": 60,
      "timeoutSeconds": 20,
      "maxConsecutiveFailures": 3
    }
  ],
  "upgradeStrategy": {
    "minimumHealthCapacity": 0,
    "maximumOverCapacity": 1
  }
}
