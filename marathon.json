{
  "id": "sys/elk",
    "apps": [
{
  "id": "elasticsearch",
  "instances": 1,
  "cpus": 1,
  "mem": 1024,
  "disk": 0,
  "requirePorts": true,
  "backoffSeconds": 1,
  "backoffFactor": 1.15,
  "maxLaunchDelaySeconds": 3600,
  "labels": {
    "owner": "sys"
  },
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "elasticsearch",
      "network": "BRIDGE",
      "portMappings": [
        { "containerPort": 9200, "hostPort": 0, "protocol": "tcp", "servicePort": 9200 },
        { "containerPort": 9300, "hostPort": 0, "protocol": "udp", "servicePort": 9300 }
      ],
      "forcePullImage": false
    }
  },
  "healthChecks": [
    {
      "portIndex": 0,
      "protocol": "TCP",
      "gracePeriodSeconds": 300,
      "intervalSeconds": 60,
      "timeoutSeconds": 20,
      "maxConsecutiveFailures": 0
    }
  ],
  "upgradeStrategy": {
    "minimumHealthCapacity": 0,
    "maximumOverCapacity": 1
  }
},{
  "id": "kibana",
  "instances": 1,
  "cpus": 0.1,
  "mem": 256,
  "disk": 0,
  "requirePorts": true,
  "backoffSeconds": 1,
  "backoffFactor": 1.15,
  "maxLaunchDelaySeconds": 3600,
  "dependencies": [
    "/sys/elk/elasticsearch"
  ],
  "labels": {
    "owner": "sys"
  },
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "kibana",
      "network": "BRIDGE",
      "portMappings": [
        { "hostPort": 0, "containerPort": 5601 }
      ],
      "parameters": [
        { "key": "env", "value": "ELASTICSEARCH_URL=http://elasticsearch-elk-sys.marathon:9200" }
      ],
      "forcePullImage": false
    }
  },
  "healthChecks": [
    {
      "portIndex": 0,
      "protocol": "TCP",
      "gracePeriodSeconds": 300,
      "intervalSeconds": 60,
      "timeoutSeconds": 20,
      "maxConsecutiveFailures": 0
    }
  ],
  "upgradeStrategy": {
    "minimumHealthCapacity": 0,
    "maximumOverCapacity": 1
  }
},{
  "id": "logstash",
  "instances": 1,
  "cpus": 1,
  "mem": 1024,
  "disk": 0,
  "requirePorts": true,
  "backoffSeconds": 1,
  "backoffFactor": 1.15,
  "maxLaunchDelaySeconds": 3600,
  "dependencies": [
    "/sys/elk/elasticsearch"
  ],
  "labels": {
    "owner": "sys"
  },
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "softonic/logstash",
      "network": "BRIDGE",
      "portMappings": [
        { "containerPort": 12201, "hostPort": 0, "protocol": "udp", "servicePort": 12201 }
      ],
      "forcePullImage": true
    }
  },
  "healthChecks": [
    {
      "protocol": "COMMAND",
      "command": { "value": "ps aux | grep logstash" },
      "gracePeriodSeconds": 300,
      "intervalSeconds": 60,
      "timeoutSeconds": 20,
      "maxConsecutiveFailures": 3
    }
  ],
  "upgradeStrategy": {
    "minimumHealthCapacity": 0,
    "maximumOverCapacity": 1
  }
}  ]
}
